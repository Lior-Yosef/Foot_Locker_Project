@using Foot_Locker_Project.Models;
<link href="~/Content/Shoes.css" rel="stylesheet" type="text/css" />

<div class="btnView">

    <a href="@Url.Action("GenderMan", "Clothing")">
        <button> Man Clothing  </button>
    </a>

    <a href="@Url.Action("ShorTshirt", "Clothing")">
        <button> Short By Price </button>
    </a>

    <a href="@Url.Action("TableDetails", "Clothing")">
        <button> Manager view </button>
    </a>

</div>

<section class="contener">

    @foreach (Clothing item in Model)
    {
        <div class="box">
            <img src="@item.IMGlink" />
            <h1>@item.Company</h1>
            <p>@item.Company: @item.Type</p>
            <p>Gender: @item.Gender</p>
            <p>Price: @item.Price$</p>

        </div>
    }
</section>